<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:background="@drawable/bordered"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp">
            <Button
                android:id="@+id/deactivateEmpBtn"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Deactive"
                android:background="@android:color/transparent"
                android:textColor="@color/deactivateBtnText"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:padding="20dp"
                android:id="@+id/idIVCardImage"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:src="@drawable/employee_default_img"
                android:contentDescription="@string/app_name" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.7"
                android:gravity="center"
                android:layout_marginHorizontal="5dp"
                >

                <!-- Text View to display Course Name -->
                <TextView
                    android:id="@+id/idTVCardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/idTVCardDOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Block:"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/idTVCardRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Block:"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/idTVCardMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ph No:"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
