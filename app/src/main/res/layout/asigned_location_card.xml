<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    android:layout_gravity="center"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:ignore="MissingDefaultResource"
    android:id="@+id/card_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/bordered"
        android:backgroundTint="@color/main"
        >

        <TextView
            android:id="@+id/supervisornameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supervisor: 12534"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/locationNameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Cleaning"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/workersTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workers: Mahesh"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
